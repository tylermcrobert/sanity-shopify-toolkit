{
  "version": "0.1.0",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "peerDependencies": {},
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "sanity-shopify-toolkit",
  "author": "Tyler McRobert",
  "module": "dist/sanity-shopify-toolkit.esm.js",
  "size-limit": [
    {
      "path": "dist/sanity-shopify-toolkit.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/sanity-shopify-toolkit.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@sanity/client": "^2.0.1",
    "@sanity/image-url": "^0.140.19",
    "@size-limit/preset-small-lib": "^4.6.0",
    "husky": "^4.3.0",
    "size-limit": "^4.6.0",
    "tsdx": "^0.14.0",
    "tslib": "^2.0.2",
    "typescript": "^4.0.3"
  }
}
